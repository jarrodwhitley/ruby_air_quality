<div class="p-5 mb-4 rounded <%= @aqi_color %>">
  <% if @final_output.present? %>
    <div class="container-fluid py-5">
      <h1 class="display-5 fw-bold"><%= @final_output %></h1>
      <p class="col-md-8 fs-4">Current air quality level is <strong><%= @aqi_description %></strong> in Frisco, TX</p>
      <p>Reload your browser to update this page</p>
      <button class="btn btn-primary btn-lg" type="button">Example button</button>
    </div>
  <% else %>
    <div class="container-fluid py-5">
      <h1 class="display-5 fw-bold">Search for your zipcode</h1>
      <p class="col-md-8 fs-4">Enter your zipcode to check the air quality in your area.</p>
      <%= form_tag zipcode_path, method: 'post' do %>
        <%= text_field_tag 'zipcode', "75068", placeholder: "Search Zipcode", class: "form-control me-2" %>
        <%= submit_tag 'Search', class: 'btn btn-primary btn-lg mt-4' %>
      <% end %>
    </div>
  <% end %>
</div>